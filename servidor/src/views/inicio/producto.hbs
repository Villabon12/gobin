{{> header }}

<body>
    {{> navbar }}

	<header id="fh5co-header" class="fh5co-cover js-fullheight" role="banner" style="background-image: url(images/hero_1.jpeg);" data-stellar-background-ratio="0.5">
		<div class="overlay"></div>
		<div class="container">
			<div class="row">
				<div class="col-md-12 text-center">
					<div class="display-t js-fullheight">
						<div class="display-tc js-fullheight animate-box" data-animate-effect="fadeIn">
							<h1> <em>Productos</em></h1>
							<h2>Varias secciones</h2>
						</div>
					</div>
				</div>
			</div>
		</div>
	</header>

	
	<div id="fh5co-gallery" class="fh5co-section">
		<div class="container-fluid fh5co-item-wrap">
			<div class="fh5co-item">
                {{#each prod}}
                <div class="col-md-4">
                    <div class="card">
                        <form action="" method="POST">

                            <img class="card-img-top" src="assets/images/{{ imagen }}" alt="">
                            <div class="card-body">
                                <h3 class="card-title mb-3">{{ nombre }}</h3>
                                <p class="card-text">{{descripcion}}</p>
                                <span class="fh5co-price">{{precio}}</span>
                            </div>
                        </form>
                    </div>
                </div>
                {{/each }}
            </div>
        </div>
    </div>
				

    {{> footer }}
</body>